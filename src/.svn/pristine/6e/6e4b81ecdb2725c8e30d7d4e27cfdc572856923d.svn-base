<template>
  <div class="bgfff">
    <div id="header" class="doctor_header">
      <div class="header_Left" @click="return_before()"><p></p></div>
      <div class="header_center font18">余额</div>
    </div>
    <div id="container_full" class="bgfff text-center" :class="{scrollBar:isActive}">
      <div>
        <div class="balance_box font16" v-show="!isActive">
          <b>{{balance}} 元</b>
        </div>
      </div>
      <div class="balance_btn" @click="tixian" v-show="!isActive">
        去提现
      </div>

      <div style="position: absolute;bottom:10%;width: 100%;color: #fff">
        <b>{{balance}} 元</b>
      </div>
    </div>
    <div class="balance_title" :class="{scrollTitle:isActive}">
      <p>余额明细</p>
    </div>
    <p class="gray_3"></p>
    <div class="balance_item">
      <div class="flex_cont flex_simple balance_list" v-for="(item,index) in amountDetail">
        <div class="flex_item">
          <ul>
            <li>{{amountDetail[index].accountDesc}}</li>
            <li class="paragraph font10">{{amountDetail[index].updateTime}}</li>
          </ul>
        </div>
        <div class="flex_item ">
          <p class="text-right rise" v-if="amountDetail[index].type =='+'" >{{amountDetail[index].type}} {{amountDetail[index].amount}} 元</p>
          <p class="text-right down" v-else="amountDetail[index].type =='-'" >{{amountDetail[index].type}} {{amountDetail[index].amount}} 元</p>
        </div>
      </div>

    </div>
  </div>
</template>

<script>
  import $j from 'jquery'
  import ale from '../../ale'
  export default{
    name:'about_us',
    data(){
      return{
        amountDetail:'',
        balance:'',
        cashStartDate:null,
        cashEndDate:null,
        isActive:false,
        isScroll:true
      }
    },
    mounted:function(){

      var that = this;
      window.onscroll = function () {
          console.log(document.documentElement.scrollTop || document.body.scrollTop)
        if(document.documentElement.scrollTop || document.body.scrollTop>=400){
          that.isActive = true;
          if(that.isScroll){
            $j(window).scrollTop(5);
            that.isScroll = false
          }

        }
        if(document.documentElement.scrollTop || document.body.scrollTop==0){
          setTimeout(function () {
            that.isActive = false;
          }, 1000);

        }
      };
      this.$ajax.post(host+'accountManage.action','action=balance')
        .then(function(result){
          that.amountDetail = result.data.amountDetail;
          that.balance = result.data.balance;
          that.cashStartDate = result.data.cashStartDate;
          that.cashEndDate = result.data.cashEndDate;
        })
    },
    methods:{
      goTakeBalance:function (){
        var _this=this;
        _this.$router.push({name:'takebalance',params:{cashStartDate:_this.cashStartDate,cashEndDate:_this.cashEndDate}});
      },
      tixian:function () {
        var that = this;
        var time='';
        this.$ajax.post(urlWay.clinicHost+'doctorClinic.action',"action=getCurrentTime")
          .then(function (result) {
            if (result.data.mes == '请登录') {
              ale('请登录', '24px');
              that.$route.push('/login')
            }
            else if (result.data.mes == "成功") {
              //alert(workStatus);
              time=result.data.currentTime.split(' ')[0].split('-')[2];
              if(parseInt(time)<that.cashStartDate || parseInt(time)>that.cashEndDate){
                ale('请在每月'+that.cashStartDate+'-'+that.cashEndDate+'号申请提现');
                return false;
              }else{
                  that.goTakeBalance()
              }
            }
          })
      }
    }
  }
</script>

