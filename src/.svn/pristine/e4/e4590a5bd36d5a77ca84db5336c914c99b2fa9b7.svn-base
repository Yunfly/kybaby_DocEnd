<script>
  import SideFooter from '../component/footer'
  import ale from '../ale'
  export default{
    data(){
      return{
        articles:'',
        doctorInfo:{
          octorImage:'../../public/img/home/headimg.jpg'
        },
        imgUrl : urlWay.fileserver,
        host:host,
        todolist:'',
        hostFile:hostFile,
        orderTime:'',
        balance:'',
        line:'',
        online:true,
        consultDoctorInfo:'',
        msgTag:false,
        countMsg:0
      }
    },
    beforeCreate:function () {
      if(sessionStorage.getItem('is_share') == null){
        if(window.location.href.indexOf('?')>-1){
          sessionStorage.setItem('is_share','share_y');
          var urlmes=window.location.search.substring(1).split('#')[0];
          this.$router.push({path:'/'+urlmes.split('::')[0]});
        }
      }else if(sessionStorage.getItem('is_share') == 'share_y'){
        sessionStorage.setItem('is_share','share_y');
      }
    },
    components:{
      SideFooter
    },
    mounted: function() {
      websocket.onmessage = this.WSonMessage;
      this.getSubmittedToken();
      this.getwebsocketDoctorId();
      this.autoLogin();
      var that = this;

      this.$ajax.post(todolist_host+'homePageWaitingProcess/homePageWaitingProcess.action','action=getHomePageWaitingProcessList')
        .then(function(result){
          that.todolist = result.data;
          if (result.data.todayHomePageWaitingProcessList[0] == undefined) {
            that.todolist.todayHomePageWaitingProcessList.push({
              orderTime: '暂无订单',
              orderType: false
            });
          }
          if (result.data.otherHomePageWaitingProcessList[0] == undefined){
            that.todolist.otherHomePageWaitingProcessList.push({
              orderTime:'暂无订单',
              orderType:false
            });

          }
        });

      this.$ajax.post(host+'accountManage.action','action=all')
        .then(function(result){
          that.balance = result.data.balance
        });
      this.$ajax.post(host+'consultManage.action','action=getConsultDoctorInfo')
        .then(function(result){
          that.consultDoctorInfo = result.data.consultDoctorInfo;
          if(result.data.consultDoctorInfo.isOnline == 'N'){
              that.online = false;
          } else{
            that.online = true;
          }
        })
    },
    methods:{
      WSonMessage:function(event){
        this.countMsg++;
        this.msgTag = true;
      },
      receiveOrder:function(onOrder){
        var that = this;
        that.online=!that.online;
        var isOnline=onOrder?'Y':'N';
        this.$ajax.post(host+'consultManage.action','action=saveOrUpdateConsultDoctorInfo&consultDoctorInfo.id='+this.consultDoctorInfo.id+'&consultDoctorInfo.isOnline='+isOnline)
          .then(function(res){
            if(res.data.mes=='成功'){

              ale('设置成功');
            }
          })
      },
    }
  }
</script>
